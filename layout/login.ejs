<main class="login-page">


  <div class="userIcon-btn d-inline-block">
    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#userLoginPage">
      <div>
        <img src="/assets/images/header/icon-user.svg" alt="">
      </div>
    </button>
  </div>

  <div class="userImg-btn d-none">
    <a href="member.html" class="btn border-0">
      <div class="rounded-circle overflow-hidden user-img">
        <img src="/assets/images/member_photo.jpg" class="w-100 h-100"  alt="">
      </div>
    </a>
  </div>

  <!-- <button type="button" id="logoutBtn" class="btn btn-primary">登出</button> -->


  <div class="modal fade" id="userLoginPage" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <button type="button" id="hiddenCloseBtn" class="btn-close d-none" data-bs-dismiss="modal" aria-label="Close"></button>

      <div class="modal-content p-10 user-login" >
        <h3 class="text-center text-white mb-7 ">會員登入</h3>
        <div class="px-8">
          <div class="form-floating mb-6">
            <input type="email" class="form-control" id="loginInput" placeholder="">
            <label for="loginInput">帳號</label>
          </div>
          <div class="form-floating mb-4">
            <input type="password" class="form-control" id="loginPassword" placeholder="Password">
            <label for="loginPassword">密碼</label>
          </div>
          <div class="d-flex justify-content-between p-3 mb-4">
            <button class="go-register-btn btn p-0 text-primary-300 fw-bold border-0 fs-6">加入會員</button>
            <button class="btn p-0 text-primary-300 fw-bold border-0 fs-6">忘記密碼</button>
          </div>

          <div class="">
            <p class="login-alert d-none text-danger text-center">* 請輸入帳號及密碼 *</p>
            <button type="button" class="confirm-login btn btn-primary-300 rounded-20px py-4  w-100 mb-7" >登入</button>
            
          </div>
        </div>
        
        
      </div>
      <div class="modal-content p-10 user-register d-none">
        <h3 class="text-center text-white mb-7 ">加入會員</h3>
        <div class="px-8">
          <div class="d-flex gap-6">
            <div class="form-floating mb-6">
              <input type="text" class="form-control" id="redisterName" placeholder="">
              <label for="redisterNam">姓名</label>
            </div>
            <div class="form-floating mb-6">
              <input type="tel" class="form-control" id="redisterTel" placeholder="">
              <label for="redisterTel">手機號碼</label>
            </div>
          </div>
          
          <div class="form-floating mb-6">
            <input type="email" class="form-control" id="redisteraccount" placeholder="">
            <label for="redisteraccount">帳號</label>
          </div>
          <div class="form-floating mb-6">
            <input type="password" class="form-control" id="redisterPassword" placeholder="Password">
            <label for="redisterPassword">密碼</label>
          </div>
          <div class="form-floating mb-2">
            <input type="password" class="form-control" id="redisterPassword2" placeholder="Password">
            <label for="redisterPassword2">確認密碼</label>
          </div>
          <div class="text-end p-3 mb-4">
            <button class="go-login-btn btn p-0 text-primary-300 fw-bold border-0 fs-6">會員登入</button>
          </div>

          <div class="mb-4">
            <p class="redister-alert text-danger text-center d-none">* 所有欄位皆需填寫 *</p>
            <button type="button" class="confirm-redister btn btn-primary-300 rounded-20px py-4  w-100 mb-7 " >註冊</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script type="module" src="../login.js"></script>
